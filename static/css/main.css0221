#box {
  /* height: 100%;
  width: 100%; */
  min-height: 100%;
  position: relative;
  padding-bottom: 60px;
}

#search-box {
  width: 100%;
  padding: 10px 0 25px;
  margin: 0 auto 30px;
  background: #3c3838;
  text-align: center;
}
@media screen and (min-width: 800px) {
  #search-box {
    width: 100%;

    margin-top: 20px;
    border-radius: 20px;
  }
}

.user-guide {
  display: flex;
  color: #969696;
  justify-content: center;
}

/* width: 50%; */

#title {
  font-size: 24px;
  color: rgb(240, 255, 0);
  cursor: pointer;
}
#title:hover {
  animation-iteration-count: infinite;
}
@media screen and (min-width: 550px) {
  #title {
    font-size: 32px;
  }
}
form {
  display: flex;
  justify-content: center;
  align-items: center;
}
#search {
  margin: 0;
  padding: 5px 8px;
  width: 100%;
  border-radius: 4px;
  border: 1px solid transparent;
}
@media screen and (min-width: 800px) {
  #search {
    width: 400px;
  }
}
#search:focus {
  border-top: 1px solid rgb(240, 255, 0);
  border-left: 1px solid rgb(240, 255, 0);
}
#search-btn {
  flex-shrink: 0;
  margin: 0 0 0 10px;
  padding: 5px 0;
  width: 70px;
  border-radius: 4px;
  border: 1px solid transparent;
  background: rgba(240, 255, 0, 0.8);
  color: rgb(17, 1, 1);
  cursor: pointer;
}
#search-btn:hover {
  background: rgb(240, 255, 0);
}

